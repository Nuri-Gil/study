<?xml version="1.0" encoding="UTF-8" ?>
<!-- Mapping 설정은 root-context 에서 mybatis property 추가할 것-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.ex00.mappers.ReplyMapper">
    <insert id="insert">
        <selectKey order="AFTER" keyProperty="bno" resultType="long">
            SELECT LAST_INSERT_ID() <!-- 마지막으로 추가된 Auto-Increment 된 값을 가져오기 -->
        </selectKey>
        INSERT INTO tbl_reply (bno, replyText, replyer)
        VALUES (#{bno}, #{replyText}, #{replyer})
    </insert>
</mapper>